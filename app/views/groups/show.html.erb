<div class="container">
  <%= print_grid(@group.words) %>
</div>
<div class="row">
  <hr>
  <%= link_to "Edit this group", edit_group_path(@group) %> |
  <%= link_to "Back to groups", groups_path %>
  <%= button_to "Destroy this group", @group, method: :delete %>
</div>
<div class="container">
  <h1><%= @group.categories.count %></h1>
  <% @group.categories.each do |category| %>
    <table class="table table-striped table-sm">
      <thead>
        <tr><%= category.name %></tr>
      </thead>
      <tbody>
        <tr>
          <td colspan="4" class="scrollable-div ">
            <%= render 'words/table', words: category.words %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
