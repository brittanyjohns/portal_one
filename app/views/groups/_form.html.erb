<%= form_with(model: group) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>
      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div data-controller="nested-form" data-nested-form-index-value='WORD_RECORD'>
    <template data-nested-form-target='template'>
      <%= form.fields_for :words, Word.first(10), child_index: 'WORD_RECORD' do |word| %>
        <p><%= word.name %></p>
        <%# <%= render 'word_fields', form: word %> %>
      <% end %>
    </template>
    <%= form.fields_for :words do |saved_word| %>
      <p><%= saved_word.name %></p>
      <%# <%= render 'word_fields', form: saved_word %> %>
    <% end %>
    <div data-nested-form-target="add_item">
      <%= link_to "Add Word", "#", data: { action: "nested-form#add_association" }, class: "btn btn-success" %>
    </div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
