<%= simple_form_for :word_group, url: "/groups/#{group_id}/select_words", method: :post do |form| %>
  <div class="col-md-12">
    <div class="clearfix">
      <div class="btn-group-vertical float-start" role="group" aria-label="Vertical button group">
        <%= f.association :word %>
      </div>
    </div>
    <%= form.submit "SAVE", id: "save-btn", class: "btn btn-success" %>
  </div>
<% end %>
