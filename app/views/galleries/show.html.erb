<p style="color: green"><%= notice %></p>
<%= render @gallery %>
<%= image_link(@gallery)%>
<div>
  <%= link_to "Edit this gallery", edit_gallery_path(@gallery) %> |
  <%= link_to "Back to galleries", galleries_path %>
  <%= button_to "Destroy this gallery", @gallery, method: :delete %>
</div>
<div class="row">
  <div id="<%= dom_id @gallery %>" class="half">
    <h2>
      <%= @gallery.name %>
    </h2>
    <%= image_link(@gallery) %>
    <p>
      <%= @gallery.docs.count %>
    </p>
    <%= generate_image_gallery_button(@gallery) %>
    <%= generate_image_gallery_variation_button(@gallery) %>
  </div>
  <div class="half">
    <%= print_image_grid(@gallery.docs, '100x100') %>
  </div>
</div>
