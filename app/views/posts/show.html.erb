<p style="color: green"><%= notice %></p>
<%= render @post %>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>
  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
<div class="post-body clearfix">
  <%= @post.content %>
  <p class="small float-end">Written by: <%= "Anonymous" %> </p>
</div>
<div class="post-body clearfix">
  <h3>Documents : <%= @post.docs.count %></h3>
  <% @post.docs.each do |doc| %>
    <%= render doc %>
  <% end %>
</div>
<div class="post-body clearfix">
  <h3>Messages : <%= @post.messages.count %></h3>
  <% @post.messages.each do |message| %>
    <%= render message if message.id %>
  <% end %>
</div>
<div class="post-body clearfix">
  <h3>New Message</h3>
  <%= render 'message_form', post: @post %>
</div>
